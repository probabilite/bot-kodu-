# =========================
# API ve Telegram Ayarları
# =========================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# =========================
# Temel Trading Ayarları
# =========================
DEFAULT_LEVERAGE=3
DEFAULT_INTERVAL=15m
MIN_SIGNAL_STRENGTH=2
MAX_POSITIONS=900
COOLDOWN_MINUTES=120

# =========================
# Pozisyon Limitleri
# =========================
MAX_LONG_POSITIONS=7
MAX_SHORT_POSITIONS=7

# =========================
# Pozisyon Boyutlandırma
# =========================
# Boyutlandırma modu: "risk", "percent" veya TARGET_MARGIN_USDT kullanımı
POSITION_SIZING_MODE=risk
POSITION_PERCENT=5.0
MIN_NOTIONAL_USDT=5.0
MAX_NOTIONAL_PERCENT=100.0
MAX_ACCOUNT_RISK_PERCENT=2.0

# Taban marj hedefi (>0 ise TARGET_MARGIN_USDT * DEFAULT_LEVERAGE = notional)
TARGET_MARGIN_USDT=0.0

# =========================
# HTF (Yüksek Zaman Dilimi) Trend Filtresi
# =========================
USE_HTF_TREND=false
HTF_TREND_TF=1h
HTF_TREND_EMA=200
HTF_TREND_TOL_BP=5.0

# =========================
# Yumuşak Giriş Filtreleri
# =========================
ENTRY_TF=5m
EXT_MAX_DEV_PCT=1.5
PULLBACK_LOOKBACK=10
MIN_PULLBACK_BARS=2
USE_SPIKE_GUARD=true
SPIKE_LOOKBACK=12
SPIKE_MAX_PCT=5.0

# =========================
# ML (Machine Learning) Ayarları
# =========================
ML_THRESHOLD=0.55
INVERT_ML_PROB=false
ML_CLOSE_THRESHOLD=0.4
ML_CLOSE_GRACE_MIN=15
ML_CLOSE_CONSEC=3
ML_CLOSE_MIN_ADVERSE_PCT=0.4
ML_CLOSE_ATR_GUARD=0.5
ML_CLOSE_SKIP_IF_BE_PROTECTED=true

# =========================
# RSI ve Volatilite Ayarları
# =========================
TREND_RSI_MIN=30
TREND_RSI_MAX=70
RANGE_RSI_MIN=40
RANGE_RSI_MAX=60
MIN_VOLUME_RATIO=0.8

# =========================
# TP/SL ve Trailing Ayarları
# =========================
TP1_BE_OFFSET_BP=3.0
TRAILING_OFFSET=0.5
WORKING_PRICE_TYPE=MARK_PRICE
PRICE_PROTECT=true

# =========================
# Risk ve Güvenlik
# =========================
MIN_PRICE=0.50
LIQUIDITY_THRESHOLD=10000
STARTUP_GRACE_MINUTES=10
OPEN_GRACE_MINUTES=5

# =========================
# Raporlama ve Bildirim
# =========================
PNL_REPORT_INTERVAL=1800
TELEGRAM_PARSE_MODE=HTML
DAILY_REPORT_TIME=00:00

# =========================
# Model ve Eğitim
# =========================
AUTO_RETRAIN=false
DISABLE_STARTUP_TRAINING=true
TRAINING_MIN=0.25
TRAINING_MAX=0.45
TRAINING_POSITION_SIZE=3.0

# =========================
# Dosya Yolları
# =========================
MODEL_CLASSIFICATION_PATH=model_cls.pkl
MODEL_REGRESSION_PATH=model_reg.pkl
MODEL_META_PATH=model_meta.json

# =========================
# Gelişmiş Ayarlar
# =========================
ALLOW_MULTI_ENTRY_PER_SYMBOL=false
REENTRY_COOLDOWN_MIN=15
SYMBOL_CACHE_TTL_MINUTES=60
API_TIMEOUT=20
LOG_LEVEL=INFO